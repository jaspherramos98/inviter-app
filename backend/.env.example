# File: backend/.env.example
# Path: /inviter-app/backend/.env.example
# Description: Environment variables template

# Database
DATABASE_URL=sqlite:///./inviter.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/inviter
# For MySQL:
# DATABASE_URL=mysql+pymysql://user:password@localhost:3306/inviter

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Application
BASE_URL=https://invite.yourapp.com
FRONTEND_URL=http://localhost:3000

# OAuth (for future implementation)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_client_secret